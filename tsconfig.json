{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2017",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "noEmitOnError": false,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "build",
    "noUnusedLocals": false,
    "forceConsistentCasingInFileNames": true
  }
}